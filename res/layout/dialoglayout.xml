<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="8dp" >

    <Button
        android:id="@+id/dismissDialogButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/watchVideoButton"
        android:layout_alignBottom="@+id/watchVideoButton"
        android:layout_marginLeft="34dp"
        android:layout_toRightOf="@+id/watchVideoButton"
        android:background="@drawable/red_button"
        android:text="@string/dismiss_button_string"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/watchVideoButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/video_text"
        android:layout_below="@+id/video_text"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/red_button"
        android:text="@string/watch_button_string"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/video_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="@string/question_text"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</RelativeLayout>